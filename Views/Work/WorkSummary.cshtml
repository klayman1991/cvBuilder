@model Work

<form asp-action="EditSkills" method="post">
    <input type="hidden" asp-for="WorkID" />
    <div class="form-group">
        <div>
            <div class="form-group">
                <div class="row">
                    <div class="d-inline-block col-4">
                        <label asp-for="WorkName">Work Name</label>
                        <div><span asp-validation-for="WorkName" class="text-danger"></span></div>
                        <input asp-for="WorkName" class="form-control" />
                    </div>
                    <div class="d-inline-block col-4">
                        <label asp-for="WorkPosition">Level</label>
                        <div><span asp-validation-for="WorkPosition" class="text-danger"></span></div>
                        <input asp-for="WorkPosition" type="text" class="form-control" />
                    </div>
                    <div class="d-inline-block col-2">
                        <label asp-for="WorkStartDate">Description (optional)</label>
                        <div><span asp-validation-for="WorkStartDate" class="text-danger"></span></div>
                        <input asp-for="WorkStartDate" type="text" class="form-control" data-provide="datepicker" />
                    </div>
                    <div class="d-inline-block col-2">
                        <label asp-for="WorkEndDate">Description (optional)</label>
                        <div><span asp-validation-for="WorkEndDate" class="text-danger"></span></div>
                        <input asp-for="WorkEndDate" type="text" class="form-control" data-provide="datepicker" />
                    </div>

                </div>
                @*<div class="d-inline-block col-4">
                    <label asp-for="WorkDescriptions">Description (optional)</label>
                    <div><span asp-validation-for="WorkDescriptions" class="text-danger"></span></div>
                    <input asp-for="WorkDescriptions" type="text" class="form-control" />
                </div>*@
            </div>


            @if (Model.WorkID == 0)
            {
                <div class="text-right">
                    <button class="btn btn-sm btn-primary text-center" type="submit">Add New</button>
                </div>
            }
            else
            {
                <div class="text-right">
                    <button class="btn btn-sm btn-primary text-center" type="submit"><i class="fa fa-save"></i></button>
                    <button class="btn btn-sm btn-danger btn" form="@Model.WorkID" type="submit"><i class="fa fa-trash-o"></i></button>
                    <button class="btn btn-sm btn-koko btn" type="submit"><i class="fa fa-eye"></i></button>
                </div>
            }
        </div>
    </div>
</form>

<form asp-action="DeleteSkills" id="@Model.WorkID" method="post">
    <input type="hidden" asp-for="WorkID" />
</form>



