@model Courses

<form asp-action="EditCourse" method="post">
    <input type="hidden" asp-for="CoursesID" />
    <div class="form-group">
        @*<div class="">*@

        <div>
            <div class="form-group">
                <div class="row">
                    <div class="d-inline-block col-4">
                        <label asp-for="CoursesName">Course Name</label>
                        <div><span asp-validation-for="CoursesName" class="text-danger"></span></div>
                        <input asp-for="CoursesName" class="form-control" />
                    </div>

                    <div class="d-inline-block col-4">
                        <label asp-for="StartDate">Start Date</label>
                        <div><span asp-validation-for="StartDate" class="text-danger"></span></div>
                        <input asp-for="StartDate" type="text" class="form-control" data-provide="datepicker" />
                    </div>

                    <div class="d-inline-block col-4">
                        <label asp-for="EndDate">End Date</label>
                        <div><span asp-validation-for="EndDate" class="text-danger"></span></div>
                        <input asp-for="EndDate" type="text" class="form-control" data-provide="datepicker" />


                    </div>

                </div>

            </div>
            <div class="form-group">
                <label asp-for="CoursesDescription"></label>
                <div><span asp-validation-for="CoursesDescription" class="text-danger"></span></div>
                
                <textarea asp-for="CoursesDescription" class="form-control" rows="3"></textarea>
            </div>

            @if (Model.CoursesID == 0)
            {
                <div class="text-right">
                    <button class="btn btn-sm btn-primary text-center" type="submit">Add New</button>
                </div>
            }
            else
            {
                <div class="text-right">
                    <button class="btn btn-sm btn-primary text-center" type="submit"><i class="fa fa-save"></i></button>
                 

                    <button class="btn btn-sm btn-danger btn" form="@Model.CoursesID" type="submit"><i class="fa fa-trash-o"></i></button>
                    <button class="btn btn-sm btn-koko btn" type="submit"><i class="fa fa-eye"></i></button>
                </div>
            }
        </div>
    </div>
</form>

<form asp-action="DeleteCourse" id="@Model.CoursesID" method="post">


    <input type="hidden" asp-for="CoursesID" />



</form>




