<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CV</title>
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <script src="~/jquery.js"></script>
    <link href="~/css/font-awesome.css" rel="stylesheet" />
    <link href="~/css/A4Page.css" rel="stylesheet" />
    <script src="~/lib/rasterizehtml/rasterizeHTML.js"></script>

</head>

<body>
    <div class="newDesign body2">
        <div class="navbar navbar-dark bg-dark text-light">
            <a class="btn btn-dark text-light" href="http://localhost:57746/">Home </a>
            <div><a class="btn btn-dark text-light" href="http://localhost:57746/Generator">CV Generator</a></div>
            <div><a class="btn btn-dark text-light" href="http://localhost:57746/Generator/Pdf">Pdf</a></div>
        </div>
        
        <div class="row m-1 p-1">
            <div class="col-3 d-block text-left">


                <a class="btn d-block btn-light text-left" href="http://localhost:57746/Generator"><i class="fa fa-user-circle text-left" aria-hidden="true"></i>Select style </a>
                <form id="myform">
                    <button>erase</button>
                    <select id="fs">
                        <option value="Arial">Arial</option>
                        <option value="Verdana ">Verdana </option>
                        <option value="Impact ">Impact </option>
                        <option value="Comic Sans MS">Comic Sans MS</option>
                    </select>

                    <select id="size">
                        <option value="7">7</option>
                        <option value="10">8</option>
                        <option value="12">12</option>
                        <option value="15">15</option>
                    </select>
                </form>



            </div>
            <div id="values" style="display:none" class="col-9">
                <div>@RenderBody()</div>


            </div>
        </div>
    </div>
    <script>

        $(document).ready(function () {
            $("#values").fadeIn();
        });

        $("#fs").change(function () {
            //alert($(this).val());
            $('.changeMe').css("font-family", $(this).val());

        });

        $("#size").change(function () {
            $('.changeMe').css("font-size", $(this).val() + "px");
        });

        var canvas = document.getElementById("canvas"),
            context = canvas.getContext('2d'),
            html_container = document.getElementById("thehtml"),
            html = html_container.innerHTML;

        rasterizeHTML.drawHTML(html).then(function (renderResult) {
            context.drawImage(renderResult.image, 10, 25);
        });


    </script>
  
</body>

</html >
