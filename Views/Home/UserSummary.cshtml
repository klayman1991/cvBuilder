@model  CvNetCore2.Models.UserDetails





<form asp-action="EditUser" method="post">
    <input type="hidden" asp-for="UserDetailsID" />
    <div class="form-group text-white ">
        <label asp-for="Name"></label>
        <div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <input asp-for="Name" class="form-control clear text-white" />
    </div>
    <div class="form-group text-white">
        <label asp-for="Surname"></label>
        <div>
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
        <input asp-for="Surname" class="form-control clear text-white" />
    </div>
    <div class="form-group text-white">
        <label asp-for="Position"></label>
        <div>
            <span asp-validation-for="Position" class="text-danger"></span>
        </div>
        <input asp-for="Position" class="form-control clear text-white" />
    </div>
    <div class="form-group text-white">
        <label asp-for="Email"></label>
        <div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <input asp-for="Email" class="form-control clear text-white" />
    </div>
    <div class="form-group text-white">
        <label asp-for="Mobile"></label>
        <div>
            <span asp-validation-for="Mobile" class="text-danger"></span>
        </div>
        <input asp-for="Mobile" class="form-control clear text-white" />
    </div>
    <div class="text-center">
        <button class="btn  btn-primary" type="submit">Save</button>
       
    </div>

</form>